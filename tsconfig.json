{
    "compilerOptions": {
        "target":"es6",
        "module":"commonjs",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./script",
        "strict": true,
        "declarationMap": true,
        "importHelpers": true,
        "isolatedModules": false,
        "lib": [ "es6", "dom" ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/**/test-*.ts"
    ]
}